@model IEnumerable<QLBH.Models.SanPham>
@using QLBH.Models
@{
    ViewBag.Title = "Index";
}

<h2>Danh mục sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm sản phẩm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Đơn vị tính
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Loại sản phẩm
        </th>
        <th>
            Hình
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Donvitinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dongia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiSP.TenLoaiSP)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.HinhSP)*@
            @Html.Image("../../" + item.HinhSP, "", "50", "")
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaSP }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaSP })
        </td>
    </tr>
}

</table>
